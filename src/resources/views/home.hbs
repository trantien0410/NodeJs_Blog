<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 mt-3">
            <div class="card h-100">
                <a href="/courses/{{this._doc.slug}}">
                    <img class="card-img-top" src="{{this._doc.image}}" alt="{{this._doc.name}}">
                
                </a>
                <div class="card-body">
                    <a href="/courses/{{this._doc.slug}}">
                        <h5 class="card-title">{{this._doc.name}}</h5>
                    
                    </a>
                    <p class="card-text">{{this._doc.description}}</p>
                    <a href="/courses/{{this._doc.slug}}" class="btn btn-primary">Listen Music</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>